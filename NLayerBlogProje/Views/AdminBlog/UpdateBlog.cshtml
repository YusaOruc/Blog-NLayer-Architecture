@model EntityLayer.Concrate.EntityFramework.Blog
@{
    ViewBag.Title = "UpdateBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />


<div>
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Blog Güncelle</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>

        <div class="card-body">
            @using (Html.BeginForm("UpdateBlog", "AdminBlog", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
            <div class="form-group">

                @Html.HiddenFor(x => x.ID, new { @class = "form-control" })
                <br />
                @*@Html.Label("Resim")*@
                @Html.HiddenFor(x => x.Img, new { @class = "form-control" })
                @*@Html.ValidationMessageFor(x => x.Img, "", new { @class = "text-danger" })*@
                <br />
                @Html.Label("Başlık")
                @Html.TextBoxFor(x => x.BlogHeader, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.BlogHeader, "", new { @class = "text-danger" })
                <br />
                @Html.Label("Paragraf-1")
                @Html.TextAreaFor(x => x.BlogArticle1, 7, 15, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.BlogArticle1, "", new { @class = "text-danger" })
                <br />
                @Html.Label("Paragraf-2")
                @Html.TextAreaFor(x => x.BlogArticle2, 7, 15, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.BlogArticle2, "", new { @class = "text-danger" })
                <br />
                @Html.Label("Paragraf-3")
                @Html.TextAreaFor(x => x.BlogArticle3, 7, 15, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.BlogArticle3, "", new { @class = "text-danger" })
                <br />
                @Html.Label("Kaynak")
                @Html.TextBoxFor(x => x.Source,  new { @class = "form-control" })
                
                <br />
                @Html.Label("Tarih")
                @Html.TextBoxFor(x => x.BlogDate, new { @class = "form-control" })
                <br />
                <img id="imgshow" style="width:400px;height:300px;" src="@Html.DisplayFor(x => x.Img, new { @class = "form-control" })" />
                <br /><br /><hr />

                <input style="width:400px;float:left;" type="file" id="imgload" name="Img" class="btn btn-primary" />
            </div>
                <button style="float:right;" class="btn btn-primary">Güncelle</button>
            }

        </div>
    </div>


    <!-- /.card-body -->
    <!-- /.card -->
</div>
