@model EntityLayer.Concrate.EntityFramework.Blog
@{
    ViewBag.Title = "AddBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />

<div>
    <div class="card card-success">
        <div class="card-header">
            <h3 class="card-title">Blog Ekle</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <form method="post" action="/AdminBlog/AddBlog/" enctype="multipart/form-data" >
            <div class="card-body">

                <div class="form-group">
                    <label for="inputClientCompany">Başlık</label>
                    <input type="text" id="inputClientCompany" name="BlogHeader" class="form-control">
                </div>
                @Html.ValidationMessageFor(x => x.BlogHeader, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label for="inputClientCompany">Paragraf-1</label>
                    <textarea type="text" id="inputClientCompany" name="BlogArticle1" class="form-control" rows="4" cols="50">
        
                    </textarea>
                </div>
                @Html.ValidationMessageFor(x => x.BlogArticle1, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label for="inputClientCompany">Paragraf-2</label>
                    <textarea type="text" id="inputClientCompany" name="BlogArticle2" class="form-control" rows="4" cols="50">
        
                    </textarea>
                </div>
                @Html.ValidationMessageFor(x => x.BlogArticle2, "", new { @class = "text-danger" })

                <div class="form-group">
                    <label for="inputClientCompany">Paragraf-3</label>
                    <textarea type="text" id="inputClientCompany" name="BlogArticle3" class="form-control" rows="4" cols="50">
        
                    </textarea>
                </div>
                @Html.ValidationMessageFor(x => x.BlogArticle3, "", new { @class = "text-danger" })

                <div class="form-group">
                    <label for="inputClientCompany">Kaynak Linki</label>
                    <input type="text" id="inputClientCompany" name="Source" class="form-control">
                </div>


                <div class="form-group">
                    <label for="inputClientCompany">Tarih</label>
                    <input type="datetime" id="inputClientCompany" name="BlogDate" value="@DateTime.Now.ToShortDateString()" class="form-control">
                </div>
                <img id="imgshow" style="width:400px;height:300px;" />
                <br />
                <br /><hr />
                <input style="400px;float:left;" type="file" id="imgload" name="Img" class="btn btn-success" />
                @Html.ValidationMessageFor(x => x.Img, "", new { @class = "text-danger" })
                
                <div class="form-group">
                    <button style="float:right;" class="btn btn-success">Kaydet</button>

                </div>

            </div>
        </form>

        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>

