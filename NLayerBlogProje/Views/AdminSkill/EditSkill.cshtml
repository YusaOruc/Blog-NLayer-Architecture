@model EntityLayer.Concrate.EntityFramework.Skill
@{
    ViewBag.Title = "EditSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />

<div>
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Yetenek Güncelle</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        
        <div class="card-body">
            @using (Html.BeginForm("EditSkill", "AdminSkill", FormMethod.Post))
            {
            <div class="form-group">
                @Html.Label("Yetenek Adı")
                @Html.TextBoxFor(x => x.SkillsName, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.SkillsName, "", new { @class = "text-danger" })
                <br />
                <label for="customRange1">Öğrenim Yüzdesi</label>
                <input type="range" id="customRange1" name="Percent" value="@Html.ValueFor(x => x.Percent)" class="custom-range" oninput="this.nextElementSibling.value = this.value">
                <output>@Html.ValueFor(x => x.Percent)</output>%
                @Html.ValidationMessageFor(x => x.Percent, "", new { @class = "text-danger" })
            </div>
                <button class="btn btn-primary">Güncelle</button>
            }

        </div>
   </div>
        

        <!-- /.card-body -->
    
    <!-- /.card -->
</div>

