<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="index3.html" class="brand-link">
                <img src="~/Folio/AdminLTE-3.0.4/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light">Admin Paneli</span>
            </a>
            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        @*<img src="~/AdminLTE-3.0.4/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">*@
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">Yuşa Oruç</a>
                    </div>
                </div>
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                        with font-awesome or any other icon font library -->
                        <li class="nav-item has-treeview">
                            <a href="/AdminHome/AdminHome/" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Home
                                </p>
                            </a>
                        </li>


                        <li class="nav-item">
                            <a href="/AdminAbout/AdminAbout/" class="nav-link">
                                <i class="nav-icon fas fa-th"></i>
                                <p>
                                    About
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/AdminSkill/AdminSkill/" class="nav-link">
                                <i class="nav-icon fas fa-book-reader"></i>
                                <p>
                                    Skills
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/AdminPortfolio/AdminPortfolio/" class="nav-link">
                                <i class="nav-icon fas fa-copy"></i>
                                <p>
                                    Portfolio
                                </p>
                            </a>
                        </li>

                        <li class="nav-item has-treeview">
                            <a href="/AdminBlog/AdminBlog/" class="nav-link">
                                <i class="nav-icon fas fa-tree"></i>
                                <p>
                                    Blog
                                </p>
                            </a>
                        </li>

                        <li class="nav-item has-treeview">
                            <a href="/AdminMessage/AdminMessage/" class="nav-link">
                                <i class="nav-icon fas fa-edit"></i>
                                <p>
                                    İletişim & Mesajlar
                                </p>
                            </a>
                        </li>


                        <li class="nav-item has-treeview">
                            <a href="/Home/HomeIndex/" class="nav-link">
                                <i class="nav-icon fas fa-book"></i>
                                <p>
                                    Siteye Git
                                </p>
                            </a>

                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/Login/LoginOut/" class="nav-link">
                                <i class="nav-icon fas fa-apple-alt"></i>
                                <p>
                                    Çıkış yap
                                </p>
                            </a>

                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <div class="content">
                @RenderBody()
                <!-- /.container-fluid -->
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="~/Folio/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/Folio/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE -->
    <script src="~/Folio/AdminLTE-3.0.4/dist/js/adminlte.js"></script>
    <!-- OPTIONAL SCRIPTS -->
    <script src="~/Folio/AdminLTE-3.0.4/plugins/chart.js/Chart.min.js"></script>
    <script src="~/Folio/AdminLTE-3.0.4/dist/js/demo.js"></script>
    <script src="~/Folio/AdminLTE-3.0.4/dist/js/pages/dashboard3.js"></script>

    <script type="text/javascript">
        $('document').ready(function () {
            $("#imgload").change(function () {
                if (this.files && this.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        $('#imgshow').attr('src', e.target.result);
                    }
                    reader.readAsDataURL(this.files[0]);
                }
            });
        });
    </script>
</body>
</html>