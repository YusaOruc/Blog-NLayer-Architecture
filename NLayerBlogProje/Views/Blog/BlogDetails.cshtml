@model EntityLayer.Concrate.EntityFramework.Blog

@{
    ViewBag.Title = "BlogDetails";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Folio Bootstrap Template - Blog Single</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/Folio/Folio/assets/img/favicon.png" rel="icon">
    <link href="~/Folio/Folio/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
