@model EntityLayer.Concrate.EntityFramework.MyPortfolio
@{
    ViewBag.Title = "AddPortfolio";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />

<div>
    <div class="card card-success">
        <div class="card-header">
            <h3 class="card-title">Portfolio Ekle</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <form method="post" action="/AdminPortfolio/AddPortfolio/" enctype="multipart/form-data">
            <div class="card-body">

                <div class="form-group">
                    <label for="inputClientCompany">Başlık</label>
                    <input type="text" id="inputClientCompany" name="Header" class="form-control">
                </div>
                @Html.ValidationMessageFor(x => x.Header, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label for="inputClientCompany">Konu</label>
                    <input type="text" id="inputClientCompany" name="Subject" class="form-control">
                </div>
                @Html.ValidationMessageFor(x => x.Subject, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label for="inputClientCompany">Linl</label>
                    <input type="text" id="inputClientCompany" name="Link" class="form-control">
                </div>
                @Html.ValidationMessageFor(x => x.Link, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label for="inputClientCompany">Kategori</label>
                    <select name="Category" id="Category" class="form-control">
                        <option value="Web">.Net</option>
                        <option value="Mobil">Mobil</option>
                        <option value="Ardunio">Ardunio</option>

                    </select>
                </div>
                @*<div class="form-group">
            <label for="inputClientCompany">Konu</label>
            <input type="text" id="inputClientCompany" name="Img" class="form-control">
        </div>*@
                <img id="imgshow" style="width:400px;height:300px;" />
                <br />
                <br /><hr />
                <input style="width:400px;float:left;" type="file" id="imgload" name="Img" class="btn btn-success" />
                @Html.ValidationMessageFor(x => x.Img, "", new { @class = "text-danger" })
                

                
                <div class="form-group">
                    <button style="float:right" class="btn btn-success">Kaydet</button>

                </div>

            </div>
        </form>

        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>

