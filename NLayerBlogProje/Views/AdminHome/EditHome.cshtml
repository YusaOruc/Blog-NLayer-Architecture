@model  EntityLayer.Concrate.EntityFramework.Home
@{
    ViewBag.Title = "EditHome";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />

<div>
    <div class="card card-dark">
        <div class="card-header">
            <h3 class="card-title">Yetenek Güncelle</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>

        <div class="card-body">
            @using (Html.BeginForm("EditHome", "AdminHome", FormMethod.Post))
            {
            <div class="form-group">
                @Html.Label("Üst Yazı")
                @Html.TextBoxFor(x => x.TopTitle, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.TopTitle, "", new { @class = "text-danger" })
                <br />
                @Html.Label("Alt Yazı")
                @Html.TextBoxFor(x => x.BottomTitle, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.BottomTitle, "", new { @class = "text-danger" })
                <br />
            </div>
                <button class="btn btn-dark">Güncelle</button>
            }

        </div>
    </div>


    <!-- /.card-body -->
    <!-- /.card -->
</div>
