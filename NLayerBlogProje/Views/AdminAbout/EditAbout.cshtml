@model EntityLayer.Concrate.EntityFramework.About
@{
    ViewBag.Title = "EditAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />


<div>
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">About Güncelle</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>

        <div class="card-body">
            @using (Html.BeginForm("EditAbout", "AdminAbout", FormMethod.Post,new {enctype="multipart/form-data" }))
            {
            <div class="form-group">

                @Html.HiddenFor(x => x.ID, new { @class = "form-control" })
                <br />

                @Html.Label("Başarımlar")
                @Html.TextBoxFor(x => x.Degree, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Degree, "", new { @class = "text-danger" })
                <br />
                @Html.Label("Mail")
                @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Mail, "", new { @class = "text-danger" })
                <br />
                @Html.Label("City")
                @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.City, "", new { @class = "text-danger" })
                <br />
                @Html.Label("Github Link")
                @Html.TextBoxFor(x => x.GitHub, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.GitHub, "", new { @class = "text-danger" })
                <br />
                @*@Html.Label("Resim")*@
                @Html.HiddenFor(x => x.Img, new { @class = "form-control" })
                @*@Html.ValidationMessageFor(x => x.Img, "", new { @class = "text-danger" })*@
                <br />
                <img  id="imgshow" style="width:300px;height:300px;" src="@Html.DisplayFor(x => x.Img, new { @class = "form-control" })" />
                <br /><br />

                <input type="file"  id="imgload" name="Img" class="btn btn-success" />

            </div>
                <button class="btn btn-primary">Güncelle</button>
            }

        </div>
    </div>


    <!-- /.card-body -->
    <!-- /.card -->
</div>

